{
  "permissions": {
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)"
    ],
    "ask": [
      "Bash(git commit --amend:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/log-to-file.sh 'USER PROMPT'",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/log-to-file.sh 'TOOL EXECUTED'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
